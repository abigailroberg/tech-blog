
{{#if loggedIn}}
<div>
    <form id='new-post-form'>
        <div>
            <label for='post-title'>Title</label>
            <input type="text" id="post-title" />
        </div>
        <div>
            <label for='post-content'>Post</label>
            <input type="text" id="post-content" />
        </div>
        <button id='create-post'>Create new post!</button>
    </form>
</div>

<h1>Your Posts:</h3>
<ol>
    {{#each posts}}
    <li class='post'>
        <article>
            <div class='post-title'>
                <a href='/post/{{id}}'>{{title}}</a>
                <a href='/dashboard/post/edit/{{id}}'>Edit post</a>
                <div class='posted'>Posted by {{user.username}} on {{format_date created_at}}</div>
            </div>
            <div class='border'>
                {{text_content}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>

<script src="/js/new-post.js"></script>
{{else}}
<h3>Please log in or sign up to see your posts & create new ones!</h3>

{{/if}}
