<div>
    <button id='create-post'>Create New Post</button>
</div>

<h1>Your Posts:</h3>
<ol>
    {{#each posts}}
    <li class='post'>
        <article>
            <div class='post-title'>
                <a href='/post/{{id}}'>{{title}}</a>
                <div class='posted'>Posted by {{user.username}} on {{format_date created_at}}</div>
            </div>
            <div class='border'>
                {{text_content}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>

<script src="/js/new-post.js"></script>